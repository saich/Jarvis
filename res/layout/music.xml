<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/select_playlist_prompt" />

    <Button
        android:id="@+id/delete_songs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:text="@string/delete_songs"
         />

    <Button
        android:id="@+id/remove_duplicates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remove_duplicates"
         android:layout_marginTop="10px" />




    <Button
        android:id="@+id/remove_all_duplicates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:text="@string/remove_duplicates_all" />

</LinearLayout>